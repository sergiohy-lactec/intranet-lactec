<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:genericsetup="http://namespaces.zope.org/genericsetup"
    i18n_domain="lactec.intranet"
    >

  <genericsetup:registerProfile
      name="default"
      title="Intranet Lactec: Install"
      description="Package to configure a new Intranet Lactec site"
      provides="Products.GenericSetup.interfaces.EXTENSION"
      directory="profiles/default"
      post_handler=".setuphandlers.fecha_intranet"
      />

  <genericsetup:registerProfile
      name="initial"
      title="Intranet Lactec: Example content"
      description="Create example content to showcase the new website"
      provides="Products.GenericSetup.interfaces.EXTENSION"
      directory="profiles/initial"
      pre_handler=".setuphandlers.initial.create_example_content"
      />

  <genericsetup:registerProfile
      name="uninstall"
      title="Intranet Lactec: Uninstall"
      description="Uninstall Intranet Lactec setup."
      provides="Products.GenericSetup.interfaces.EXTENSION"
      directory="profiles/uninstall"
      />

  <!-- Hide Uninstall Profile-->
  <utility
      factory=".setuphandlers.HiddenProfiles"
      name="lactec.intranet"
      />


  <include package=".upgrades" />

</configure>
